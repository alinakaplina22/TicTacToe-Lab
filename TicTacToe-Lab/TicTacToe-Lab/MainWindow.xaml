<Window x:Class="TicTacToeLab.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Крестики-нолики 2.0" 
        Height="500" Width="450"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize">

    <Window.Resources>
        <Style x:Key="GameButtonStyle" TargetType="Button">
            <Setter Property="FontSize" Value="48"/>
            <Setter Property="FontWeight" Value="Bold"/>
            <Setter Property="Margin" Value="5"/>
            <Setter Property="Background" Value="White"/>
            <Setter Property="BorderBrush" Value="Black"/>
            <Setter Property="BorderThickness" Value="2"/>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="*"/>
        </Grid.RowDefinitions>

        <!-- Верхняя панель: счёт и настройки символов -->
        <StackPanel Grid.Row="0" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock x:Name="Score1Text" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
            <TextBlock x:Name="Score2Text" FontSize="16" VerticalAlignment="Center" Margin="0,0,20,0"/>
        </StackPanel>

        <!-- Панель кастомизации символов -->
        <StackPanel Grid.Row="1" Margin="10" Orientation="Horizontal" HorizontalAlignment="Center">
            <TextBlock Text="Игрок 1:" VerticalAlignment="Center"/>
            <TextBox x:Name="Symbol1Box" Width="40" Text="X" MaxLength="1" Margin="5,0,20,0" HorizontalAlignment="Center"/>
            <TextBlock Text="Игрок 2:" VerticalAlignment="Center"/>
            <TextBox x:Name="Symbol2Box" Width="40" Text="O" MaxLength="1" Margin="5,0,20,0" HorizontalAlignment="Center"/>
            <Button x:Name="ApplySymbolsButton" Content="Применить" Padding="10,2" Click="ApplySymbolsButton_Click"/>
            <Button x:Name="ResetScoreButton" Content="Сброс счёта" Padding="10,2" Margin="10,0,0,0" Click="ResetScoreButton_Click"/>
        </StackPanel>

        <!-- Игровое поле 3x3 -->
        <Grid Grid.Row="2" Margin="20">
            <Grid.ColumnDefinitions>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
                <ColumnDefinition Width="*"/>
            </Grid.ColumnDefinitions>
            <Grid.RowDefinitions>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Кнопки клеток -->
            <Button x:Name="Button00" Grid.Column="0" Grid.Row="0" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="0,0"/>
            <Button x:Name="Button01" Grid.Column="1" Grid.Row="0" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="0,1"/>
            <Button x:Name="Button02" Grid.Column="2" Grid.Row="0" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="0,2"/>

            <Button x:Name="Button10" Grid.Column="0" Grid.Row="1" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="1,0"/>
            <Button x:Name="Button11" Grid.Column="1" Grid.Row="1" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="1,1"/>
            <Button x:Name="Button12" Grid.Column="2" Grid.Row="1" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="1,2"/>

            <Button x:Name="Button20" Grid.Column="0" Grid.Row="2" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="2,0"/>
            <Button x:Name="Button21" Grid.Column="1" Grid.Row="2" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="2,1"/>
            <Button x:Name="Button22" Grid.Column="2" Grid.Row="2" Style="{StaticResource GameButtonStyle}" Click="CellButton_Click" Tag="2,2"/>
        </Grid>
    </Grid>
</Window>